<resources>

    <style name="WaitDialog" parent="@android:style/Theme.Dialog">
        　　	<item name="android:windowFrame">@null</item>
        　　	<item name="android:windowIsFloating">true</item>
        　　	<item name="android:windowIsTranslucent">false</item>
        　	<item name="android:windowNoTitle">true</item>
        　	<item name="android:windowBackground">@android:color/transparent</item>
        　　	<item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--水平分割线-->
    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#ebebf1</item>
    </style>

    <style name="TitleBar">
        <item name="tb_back">@mipmap/base_back_balck</item>
        <item name="tb_background">@color/bg_title_bar</item>
        <item name="tb_title_size">@dimen/titleBarTitleSize</item>
    </style>
</resources>
